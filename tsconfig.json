{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "exclude": ["node_modules", "tmp"],
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2021",
    "resolveJsonModule": true,
    "outDir": "./build",
    "rootDir": "./src",
    "inlineSourceMap": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}
