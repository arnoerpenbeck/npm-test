{
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireBranch": "release/*"
  },
  "hooks": {
    "before:init": ["git pull", "npm run lint", "npm run test"],
    "after:bump": "npx auto-changelog -p"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": false
  }
}
